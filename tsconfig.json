{
    "compilerOptions": {
      "module": "commonjs",
      "moduleResolution": "node",
      "pretty": true,
      "sourceMap": true,
      "target": "ES2017",
      "outDir": "./dist",
      "baseUrl": "./src",
      "experimentalDecorators": true,
      "emitDecoratorMetadata": true,
      "strictNullChecks": false,
      "strict": false
    },
    "include": ["src/**/*.ts"],
    "exclude": ["node_modules"]
}